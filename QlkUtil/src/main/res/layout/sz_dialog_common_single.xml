<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/sz_white_corner_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_common_title"
        android:layout_width="match_parent"
        android:layout_height="42.0dip"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="@string/xml_dialog_title"
        android:textColor="#63B8FF"
        android:textSize="16.0sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#FF4DB6FF" />

    <TextView
        android:id="@+id/dialog_common_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="74.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:text=""
        android:textColor="#AA000000"
        android:textSize="16.0sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#C1C1C1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40.0dip"
        android:layout_gravity="center_horizontal" >

        <Button
            android:id="@+id/dialog_common_btn_positive"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/sz_bottom_corner_selector"
            android:singleLine="true"
            android:text="@string/xml_dialog_positive"
            android:textColor="#63B8FF"
            android:textSize="16.0dip" />
    </LinearLayout>

</LinearLayout>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape>
            <gradient android:angle="0" android:centerColor="@color/white" android:endColor="@color/white" android:startColor="@color/white" />

            <stroke android:width="1.1dp" android:color="@color/green" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_pressed="true"><shape>
        <gradient android:angle="0" android:centerColor="@color/white" android:endColor="@color/white" android:startColor="@color/white" />

        <stroke android:width="1.1dp" android:color="@color/green" />

        <corners android:radius="3dp" />

        <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
    </shape></item>
    <item><shape>
            <gradient android:angle="0" android:centerColor="@color/white" android:endColor="@color/white" android:startColor="@color/white" />

            <stroke android:width="1.0dp" android:color="#bdbdbd" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/square">

    <cn.com.pyc.sm.AdView
        android:id="@+id/ars_imv_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/ars_lyt_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical">

        <com.sz.view.widget.AVLoadingIndicatorView
            xmlns:avloading="http://schemas.android.com/apk/res-auto"
            android:layout_width="46dp"
            android:layout_height="46dp"
            avloading:indicator="BallSpinFadeLoader"
            avloading:indicator_color="#37B75E"/>

        <TextView
            style="@style/black_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件校验中..."/>
    </LinearLayout>

</FrameLayout>
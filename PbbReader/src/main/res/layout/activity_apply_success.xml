<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/function_bg"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_top_color">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:background="@drawable/ic_back"
            android:onClick="onBackButtonClick"/>

        <TextView
            android:id="@+id/txt_title"
            style="@style/white_xbig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="申请已提交"/>

        <Button
            android:id="@+id/btn_reapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/xml_oprete"
            android:text="重新申请"
            android:textColor="@color/green"
            android:textSize="@dimen/big"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_showInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="正在为您激活，请稍后再次阅读，如果还不能阅读，请与卖家联系。\nTa的联系方式："
        android:textColor="@color/green"
        android:textSize="@dimen/big"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卖家 "
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_solder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卖家"
            android:textColor="@color/green"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 说："
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/aas_txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/txt_bg"
        android:gravity="left|center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:textColor="@color/green"
        android:textSize="@dimen/big"/>

</LinearLayout>
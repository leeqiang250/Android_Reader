<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/item_bg_selector"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/recommend_img"
            android:layout_width="53dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#EAEAEA"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/recommend_img"
            android:layout_alignTop="@id/recommend_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/recommend_img">

            <TextView
                android:id="@+id/recommend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                tools:text="儿歌三百首"
                android:maxLines="1"
                android:textColor="#434343"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/recommend_ower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                tools:text="三藏精灵"
                android:textColor="#85000000"
                android:textSize="12sp"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/divide"/>

</LinearLayout>
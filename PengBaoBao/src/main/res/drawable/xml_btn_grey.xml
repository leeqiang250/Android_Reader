<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="0" android:centerColor="#d7dfd9" android:endColor="#d7dfd9" android:startColor="#d7dfd9" />

            <stroke android:width="1.1dp" android:color="@color/green" />

            <corners android:radius="2dp" />

            <!--  <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" /> -->
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="0" android:centerColor="@color/white" android:endColor="@color/white" android:startColor="@color/white" />

            <stroke android:width="1.1dp" android:color="#d7dfd9" />

            <corners android:radius="2dp" />

            <!-- <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" /> -->
        </shape>
    </item>

</selector>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/amm_lyt_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xml_item_gray" >

        <ImageView
            android:id="@+id/amm_imv_divider1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/divider_main"
            />

        <ImageView
            android:id="@+id/amm_imv_divider2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/divider_main"
            />

        <ImageView
            android:id="@+id/amm_imv_divider3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/divider_main"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/amm_txt_content"
                style="@style/black_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/amm_imv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrows_green" />

            <TextView
                android:id="@+id/amm_txt_count"
                style="@style/black_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/amm_imv_arrow"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/amm_imv_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/amm_txt_count"
                android:src="@drawable/imv_new"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/amm_lyt_2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/function_bg"
        android:clickable="false"
        android:visibility="gone" />

</LinearLayout>
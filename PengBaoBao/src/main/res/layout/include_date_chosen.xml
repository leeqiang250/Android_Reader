<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="30dp" >    <TextView        android:id="@+id/idc_txt_date"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerVertical="true"        android:layout_marginLeft="5dp"        android:textColor="@color/green"        android:textSize="@dimen/middle" />    <TextView        android:id="@+id/idc_txt_chosen"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentRight="true"        android:layout_centerVertical="true"        android:layout_marginRight="5dp"        android:text="已选择0个"        android:textColor="@color/green"        android:textSize="@dimen/middle"        android:visibility="gone" />    <ImageView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:background="@drawable/divider_main" /></RelativeLayout>
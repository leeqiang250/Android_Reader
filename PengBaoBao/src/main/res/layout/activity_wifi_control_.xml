<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/xml_screen_black"
    android:orientation="vertical" >

    <!--
         <TextView
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:singleLine="true"
        android:text="@string/wifi_state" />
    -->

    <TextView
        android:id="@+id/wifi_state"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:singleLine="true"
        android:text="@string/wifi_state"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/wifi_state_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/imv_wifi_state1" />

    <cn.com.pyc.widget.PycUnderLineTextView
        android:id="@+id/wlan_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/wlan_explain"
        android:textColor="@color/blue"
        android:textSize="@dimen/big" />

    <LinearLayout
        android:id="@+id/start_stop_button"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/xml_wifi"
        android:gravity="center" >

        <TextView
            android:id="@+id/start_stop_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textSize="@dimen/big" />
    </LinearLayout>

    <TextView
        android:id="@+id/instruction"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/instruction" />

    <TextView
        android:id="@+id/ip_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:minWidth="150dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="@dimen/big"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:paddingBottom="15dp" >

        <TextView
            android:id="@+id/tv_txt_names"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="您已选中的文件名称：" />

        <ListView
            android:id="@+id/lv_file_names"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_txt_names"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:cacheColorHint="#00000000"
            android:dividerHeight="0dp" >
        </ListView>

        <!--
        <LinearLayout
            android:id="@+id/buttom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/instruction_pre"
                style="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="73dp"
                android:text="@string/instruction_pre"
                android:visibility="gone" />

            
        </LinearLayout>
        -->

    </RelativeLayout>

</LinearLayout>